FROM ruby:3.3.1

RUN bundle config --global frozen 1

WORKDIR /usr/src/app/backend

COPY Gemfile Gemfile.lock ./
RUN bundle lock --add-platform x86_64-linux \
    && bundle install

RUN echo "source /usr/share/bash-completion/completions/git" >> ~/.bashrc

RUN curl -SL https://deb.nodesource.com/setup_20.x | bash \
    && apt-get update \
    && apt-get install -y nodejs sudo lsof vim\
    && npm install -g yarn

COPY . /usr/src/app/backend

ENV RAILS_ENV=production
ENV RAILS_SERVE_STATIC_FILES=true
ARG RAILS_MASTER_KEY
ENV RAILS_MASTER_KEY=${RAILS_MASTER_KEY}
ARG RAILS_MASTER_KEY_TEST
ENV RAILS_MASTER_KEY_TEST=${RAILS_MASTER_KEY_TEST}

# db setting
ARG DATABASE_USER
ARG DATABASE_NAME
ARG DATABASE_SOCKET
ARG DATABASE_PASSWORD
ARG DATABASE_PASSWORD_TEST
ENV DATABASE_USER=${DATABASE_USER}
ENV DATABASE_NAME=${DATABASE_NAME}
ENV DATABASE_SOCKET=${DATABASE_SOCKET}
ENV DATABASE_PASSWORD=${DATABASE_PASSWORD}
ENV DATABASE_PASSWORD_TEST=${DATABASE_PASSWORD_TEST}

EXPOSE 8080
CMD ["bin/rails", "server", "-b", "0.0.0.0", "-p", "8080"]